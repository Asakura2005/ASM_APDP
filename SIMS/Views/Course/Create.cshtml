@model SIMS.DatabaseContext.Entities.Course

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Create New Course";
    ViewData["breadcrumb"] = "Course";
    ViewData["breadcrumb_item"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light py-3">
                <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Create New Course</h5>
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Course Name</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Advanced Mathematics, C# Programming...">
                        <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                    </div>
                </div>
                <div class="card-footer bg-light text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
