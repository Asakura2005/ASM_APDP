@model SIMS.DatabaseContext.Entities.Course

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Delete Course";
    ViewData["breadcrumb"] = "Course";
    ViewData["breadcrumb_item"] = "Delete";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white py-3">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Course Deletion</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Cannot Delete!</h5>
                        <p>@errorMessage</p>
                    </div>
                }
                else
                {
                    <p class="text-danger">Are you sure you want to delete this course? This action cannot be undone.</p>
                }

                <h6 class="mt-4">Details:</h6>
                <dl class="row">
                    <dt class="col-sm-4">Course Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>
            <div class="card-footer bg-light text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-danger" disabled="@(!string.IsNullOrEmpty(errorMessage))">
                        <i class="fas fa-trash-alt me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
