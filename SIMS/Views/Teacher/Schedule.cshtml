@model SIMS.Models.Teacher.TeacherDashboardViewModel

@{
    ViewData["Title"] = "Teaching Dashboard";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
        <li class="breadcrumb-item active">Teaching Schedule</li>
    </ol>

    @if (Model == null || !Model.AssignedClasses.Any())
    {
        <div class="text-center mt-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
            <h4>No Teaching Schedule Yet</h4>
            <p class="text-muted">You are not currently assigned to teach any classes.</p>
        </div>
    }
    else
    {
        <!-- Statistic Cards -->
        <div class="row">
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Classes</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalClasses</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chalkboard fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Students</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalStudents</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Class Cards -->
        <div class="row">
            @foreach (var classDetail in Model.AssignedClasses)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">@classDetail.CourseName</h6>
                            <span class="badge bg-primary rounded-pill">@classDetail.ClassName</span>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar-alt fa-fw me-2 text-muted"></i>
                                <span>@classDetail.Schedule</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="fas fa-users fa-fw me-2 text-muted"></i>
                                <span>Enrollment: <strong class="text-dark">@classDetail.StudentCount students</strong></span>
                            </div>
                        </div>
                        <div class="card-footer bg-white text-center">
                            <a href="@Url.Action("Index", "Attendance", new { classId = classDetail.ClassId })" class="btn btn-sm btn-outline-primary w-100">
                                <i class="fas fa-user-check me-2"></i>Take Attendance for this Class
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .border-left-primary {
            border-left: .25rem solid #4e73df !important;
        }

        .border-left-success {
            border-left: .25rem solid #1cc88a !important;
        }

        .text-xs {
            font-size: .8rem;
        }

        .text-gray-300 {
            color: #dddfeb !important;
        }

        .text-gray-800 {
            color: #5a5c69 !important;
        }

        .card-footer {
            border-top: 1px solid #e3e6f0;
        }
    </style>
}
