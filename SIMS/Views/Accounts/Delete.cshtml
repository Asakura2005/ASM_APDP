@model SIMS.Models.DeleteUserViewModel

@{
    ViewData["Title"] = "Confirm Deletion";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var showClassWarning = ViewData["ShowClassWarning"] as bool? ?? false;
}

<div class="card-header">
    <h3 class="card-title">@ViewData["Title"]</h3>
</div>
<div class="card-body">
    <h4 class="text-danger">Are you sure you want to delete this user?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Username:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Role:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>
    </dl>

    <form asp-action="Delete" method="post" id="deleteForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group mt-4">
            <button type="button" id="confirmDeleteBtn" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Confirm Delete</button>
            <a asp-action="ManageUsers" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
        </div>
    </form>
</div>

<!-- Deletion Confirmation Modal -->
<div class="modal fade" id="deleteWarningModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmation Required</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@ViewData["WarningText"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="finalDeleteBtn" class="btn btn-danger">Proceed with Deletion</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var showWarning = @showClassWarning.ToString().ToLower();

            $('#confirmDeleteBtn').click(function() {
                if (showWarning) {
                    $('#deleteWarningModal').modal('show');
                } else {
                    $('#deleteForm').submit();
                }
            });

            $('#finalDeleteBtn').click(function() {
                $('#deleteForm').submit();
            });
        });
    </script>
}
