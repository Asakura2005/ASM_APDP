@model IEnumerable<SIMS.Models.UserListItemViewModel>

@{
    // Use the main layout
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Define ViewData for the layout
    ViewData["title"] = "Manage Teachers";
    ViewData["breadcrumb"] = "Accounts";
    ViewData["breadcrumb_item"] = "Manage Teachers";
}

@* Display success/error messages from TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-chalkboard-teacher me-2"></i> Manage Teachers
        </h5>
        <form asp-action="ManageTeachers" method="get">
            <div class="input-group input-group-sm">
                <input type="text" name="searchString" class="form-control" placeholder="Search..." value="@ViewData["CurrentFilter"]" />
                <button type="submit" class="btn btn-outline-primary"><i class="fas fa-search"></i></button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="teachersDataTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th class="text-center">Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    <span class="badge bg-primary text-white">@user.Role</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info me-1" title="Edit User">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="Delete User">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // The Simple-DataTables library is already loaded globally in scripts.js
            // We just need to initialize it on our table
            const dataTable = new simpleDatatables.DataTable("#teachersDataTable");
        });
    </script>
}
