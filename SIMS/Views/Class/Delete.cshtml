@model SIMS.DatabaseContext.Entities.Class

@{
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["title"] = "Delete Class";
        ViewData["breadcrumb"] = "Class";
        ViewData["breadcrumb_item"] = "Confirm Deletion";
    }
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger bg-opacity-10 text-danger-emphasis py-3">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Class Deletion</h5>
            </div>
            <div class="card-body">
                @if (ViewData["ErrorMessage"] != null)
                {
                    {
                        <div class="alert alert-danger d-flex align-items-center">
                            <i class="fas fa-times-circle me-3"></i>
                            <div>
                                <h6 class="alert-heading">Cannot delete this class</h6>
                                @ViewData["ErrorMessage"]
                            </div>
                        </div>
                    }
                }
                else
                {
                    {
                        <p>Are you sure you want to delete this class? This action cannot be undone.</p>
                    }
                }

                <hr />

                <dl class="row">
                    <dt class="col-sm-4">Class Name:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">Schedule:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Schedule)</dd>
                </dl>
            </div>
            <div class="card-footer bg-light text-end">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </a>
                    @if (ViewData["ErrorMessage"] == null)
                    {
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Confirm Deletion
                            </button>
                        }
                    }
                    else
                    {
                        {
                            <button type="submit" class="btn btn-danger" disabled>
                                <i class="fas fa-trash-alt me-2"></i>Confirm Deletion
                            </button>
                        }
                    }
                </form>
            </div>
        </div>
    </div>
</div>
