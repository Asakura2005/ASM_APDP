@model SIMS.Models.ClassDetailsViewModel

@{
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["title"] = "Class Details";
        ViewData["breadcrumb"] = "Class";
        ViewData["breadcrumb_item"] = "Details";
    }
}

<div class="card shadow-sm">
    <!-- Card Header -->
    <div class="card-header bg-light py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Class Details: @Model.ClassName</h5>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ClassId" class="btn btn-primary btn-sm me-1">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left me-2"></i>Go Back
                </a>
            </div>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body">
        <h6 class="card-title mb-3">General Information</h6>
        <dl class="row mb-4">
            <dt class="col-sm-3">Schedule:</dt>
            <dd class="col-sm-9">@Model.Schedule</dd>
        </dl>

        <hr>

        <h6 class="card-title mt-4 mb-3">List of Courses and Students</h6>

        @if (!Model.CourseRoster.Any())
        {
            {
                <div class="text-center p-4 border rounded bg-light">
                    <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
                    <p class="mb-0 text-muted">This class has not been assigned any courses or students yet.</p>
                </div>
            }
        }
        else
        {
            {
                <div class="accordion" id="coursesAccordion">
                    @foreach (var courseEntry in Model.CourseRoster)
                    {
                        {
                            var accordionId = "course-" + Guid.NewGuid().ToString();
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@accordionId" aria-expanded="false">
                                        <i class="fas fa-book me-2"></i>
                                        @courseEntry.Key
                                        <span class="badge bg-secondary rounded-pill ms-auto me-2">@courseEntry.Value.Count() students</span>
                                    </button>
                                </h2>
                                <div id="@accordionId" class="accordion-collapse collapse" data-bs-parent="#coursesAccordion">
                                    <div class="accordion-body p-0">
                                        @if (!courseEntry.Value.Any())
                                        {
                                            {
                                                <p class="p-3 text-muted">There are no students in this course yet.</p>
                                            }
                                        }
                                        else
                                        {
                                            {
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover mb-0">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th class="ps-3">Student ID</th>
                                                                <th>Full Name</th>
                                                                <th>Phone Number</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var student in courseEntry.Value)
                                                            {
                                                                {
                                                                    <tr>
                                                                        <td class="ps-3">@student.StudentId</td>
                                                                        <td>@student.FullName</td>
                                                                        <td>@student.PhoneNumber</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            }
        }
    </div>
</div>
