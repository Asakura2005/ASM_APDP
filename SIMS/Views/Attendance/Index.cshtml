@model SIMS.Models.Attendance.AttendanceIndexViewModel

@{
    ViewData["Title"] = "Attendance - Select Class";
}

<h1><i class="fas fa-user-check"></i> Take Attendance</h1>
<p class="lead">Select the class and course you want to take attendance for.</p>

<div class="row">
    <div class="col-12">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (!Model.AssignedClasses.Any())
        {
            <div class="alert alert-info">
                <h4 class="alert-heading">No Classes Assigned</h4>
                <p>You are not currently assigned to teach any classes. Please contact an administrator.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Class Name</th>
                            <th>Course Name</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.AssignedClasses)
                        {
                            <tr>
                                <td>@item.ClassName</td>
                                <td>@item.CourseName</td>
                                <td class="text-center">
                                    <a asp-action="Take" asp-route-classId="@item.ClassId" asp-route-courseId="@item.CourseId" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> Take Attendance
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
